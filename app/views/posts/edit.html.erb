<h1>Edit Post</h1>
<%= form_for :post, url: post_path(@post), method: :patch do |frm| %>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
    <p>
        <%= frm.label :title %><br>
        <%= frm.text_field(:title, {:class => 'form-control'}) %>
    </p>
    <p>
        <%= frm.label :body %><br>
        <%= frm.text_area(:body, {:class => 'form_control'})%>
    </p>
    <p>
        <%= frm.submit({:class => 'btn btn-primary'}) %>
    </p>
<% end %>